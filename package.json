{
  "name": "ha-smart-power-switcher",
  "version": "1.0.0",
  "description": "Home assistant smart power switcher based on current energy costs",
  "main": "WebServer.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/WebServer.ts | pino-pretty",
    "build": "tsup",
    "start": "node dist/WebServer.cjs",
    "clean": "rimraf dist coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "test": "vitest run",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "tomasz.wozniak.at@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
     "@biomejs/biome": "1.9.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^11.0.0",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "express": "^4.21.0",
    "puppeteer": "^23.4.0"
  },

  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": ["biome check --apply --no-errors-on-unmatched"]
  },
  "tsup": {
    "entry": ["src", "!src/**/__tests__/**", "!src/**/*.test.*"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
